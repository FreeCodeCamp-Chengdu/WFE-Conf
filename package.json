{
    "name": "web-conf",
    "version": "3.0.0",
    "description": "Web Developer Conference in Chengdu, China",
    "keywords": [
        "Web",
        "developer",
        "conference",
        "China",
        "Chengdu"
    ],
    "author": "freeCodeCamp Chengdu community",
    "license": "AGPL-3.0",
    "homepage": "https://web-conf.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FreeCodeCamp-Chengdu/Web-Conf.git"
    },
    "bugs": {
        "url": "https://github.com/FreeCodeCamp-Chengdu/Web-Conf/issues"
    },
    "scripts": {
        "test": "lint-staged",
        "clean": "rm -rf dist/ .cache/",
        "start": "npm run clean  &&  parcel source/index.html --open",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "npm run clean  &&  parcel build source/index.html --public-url .  &&  npm run pack-sw"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{html,md,css,less,js,ts,tsx,json}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "dependencies": {
        "boot-cell": "^1.0.0-rc.16",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.0-rc.8",
        "classnames": "^2.2.6",
        "html-to-image": "^0.1.1",
        "koajax": "^0.6.2",
        "lodash.groupby": "^4.6.0",
        "marked": "^1.0.0",
        "mobx": "^5.15.4",
        "mobx-web-cell": "^0.2.5",
        "web-cell": "^2.0.0",
        "web-utility": "^1.5.2"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@types/classnames": "^2.2.10",
        "@types/lodash.groupby": "^4.6.6",
        "@types/marked": "^0.7.4",
        "@typescript-eslint/parser": "^2.31.0",
        "autoprefixer": "^9.7.6",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "husky": "^4.2.5",
        "less": "^3.11.1",
        "lint-staged": "^10.2.2",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-text": "^0.9.6",
        "postcss-modules": "^2.0.0",
        "prettier": "^2.0.5",
        "typescript": "^3.8.3",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "parcel-plugin-text": {
        "extensions": [
            "csv"
        ]
    }
}
