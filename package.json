{
    "name": "web-conf",
    "version": "2.0.0",
    "description": "Web Developer Conference in Chengdu, China",
    "keywords": [
        "Web",
        "developer",
        "conference",
        "China",
        "Chengdu"
    ],
    "author": "freeCodeCamp Chengdu Group",
    "license": "AGPL-3.0",
    "homepage": "https://web-conf.tk/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FreeCodeCamp-Chengdu/WFE-Conf.git"
    },
    "bugs": {
        "url": "https://github.com/FreeCodeCamp-Chengdu/WFE-Conf/issues"
    },
    "directories": {
        "lib": "common/component/",
        "test": "."
    },
    "engines": {
        "node": "^8.0.0"
    },
    "scripts": {
        "dev": "web-cell preview",
        "build": "web-cell pack",
        "start": "web-server -p LEANCLOUD_APP_PORT --CORS",
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{js,json,css,less,md}\"",
        "lint": "eslint . --ignore-pattern dist/ --fix",
        "test": "npm run format  &&  npm run lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test  &&  git add ."
        }
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.1.3",
        "intersection-observer": "^0.5.1",
        "koapache": "^1.0.4",
        "web-cell": "^0.10.8",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.1.2",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.8.0",
        "husky": "^1.1.3",
        "prettier": "^1.15.1",
        "web-cell-cli": "^0.7.1"
    },
    "babel": {
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "decoratorsBeforeExport": true
                }
            ]
        ]
    }
}
